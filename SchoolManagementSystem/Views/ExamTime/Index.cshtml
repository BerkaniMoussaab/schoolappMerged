@model IEnumerable<SchoolManagementSystem.ExamTime>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
   
</style>

    <p>
        @Html.ActionLink("Ajouter nouveau examen", "Create", null, new { @class = "btn btn-info" })
    </p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Emplois des Examens</h6>
    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered table-sm" cellspacing="0" id="table_format" style="text-align:center; font-size:small">
            <thead style="text-align:center">
                <tr style="text-align:center">

                    <th style="font-size:small">
                        Niveau
                    </th>
                    <th>
                        Matière
                    </th>
                    <th>
                        Date d'examen
                    </th>
                    <th>
                        Heure debut
                    </th>
                    <th>
                        Heure fin
                    </th>

                    <th>
                        Periode d'examen
                    </th>
                    <th style="text-align:center;vertical-align:middle">
                        Additionneur
                    </th>
                    <th style="text-align:center;vertical-align:middle">Options</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassSubjectTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExamTable.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserTable.FullName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ExamTimeId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ExamTimeId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ExamTimeId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
 

