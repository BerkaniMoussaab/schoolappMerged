@model IEnumerable<SchoolManagementSystem.SubmissionFeeTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tution Report</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>

</head>
<body>
    <div class="form-group">
        <button type="button" class="btn btn-primary">Save Record</button>
        <a href="javascript:window.print()" class="btn btn-default"><i class="fas fa-print"></i> Print</a>
        <a href='@Url.Action("SendEmail","#")' class="btn btn-default"><i class="fas fa-envelope-open-text"></i>Email</a>
    </div>
    <br /><br />
    <div class="container body-content">
        <h5 class="alert-danger">@ViewBag.message</h5>
        @using (Html.BeginForm("CustomTution", "FeeReports", FormMethod.Post, new { @class = "form-horizontal user", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="custom-control-label">Select From Date</label>
                <input type="date" class="form-control form-control-user" id="fromDate" name="fromDate" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label class="custom-control-label">Select To Date</label>
                <input type="date" class="form-control form-control-user" id="toDate" name="toDate">
            </div>
            <div class="form-group">
                <input type="submit" value="Get Report" class="btn btn-primary btn-user btn-block" />
            </div>

        }
        <div class="row">
            <div class="col-md-10">

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center"> <h1><b>FINAL YEAR SCHOOL</b></h1></div>
                        <div class="text-center"><img src="~/Content/AdminTemplate/img/final_edit-4.png" height="200" width="220" /></div>
                        <div class="text-center"> <p> Peshawar. Cell:0321-9113267</p></div>
                        <div class="text-center"><p> Affiliated With B.I.S.E. Peshawar.</p></div>
                        <div class="text-center"><h2><b>FEE REOCRD</b></h2></div><br />
                        <br />
                        <div class="clearfix"></div>
                        <br />

                        <table class="table table-striped table-condensed table-hover">
                            <tr>
                                <th>
                                    Class
                                </th>

                                <th>
                                    Student
                                </th>
                                <th>
                                    Amount
                                </th>
                                <th>
                                    Submit Date
                                </th>
                                <th>
                                    Fee Month
                                </th>


                                <th>
                                    User
                                </th>

                            </tr>

                            @foreach (var item in Model)
            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClassTable.Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentTable.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Amount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubmissionDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FeesMonth)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserTable.FullName)
                                    </td>

                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

