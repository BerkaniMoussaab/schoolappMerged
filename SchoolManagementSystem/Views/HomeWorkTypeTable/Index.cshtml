                <tr style="text-align:center">
                    <th>
                       Nom du type
                    </th>

                    <th style="text-align:center;vertical-align:middle">Options</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomeWorkTypeName)
                        </td>
                        <td>
                            @Html.ActionLink("Modifier", "Edit", new { id = item.HomeWorkTypeID }) |
                            @Html.ActionLink("Détails", "Details", new { id = item.HomeWorkTypeID }) |
                            @Html.ActionLink("Supprimer", "Delete", new { id = item.HomeWorkTypeID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


