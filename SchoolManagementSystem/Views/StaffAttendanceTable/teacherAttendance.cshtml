@model IEnumerable<SchoolManagementSystem.StaffAttendanceTable>

@{
    ViewBag.Title = "Index";
}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Employee Attandance Record</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-condensed table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Employee
                        </th>
                        <th>
                            Attend Date
                        </th>
                        <th>
                            Check In
                        </th>
                        <th>
                            Check Out
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        int id = Convert.ToInt32(Session["userid"].ToString());
                        if (id == item.StaffTable.UserID)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StaffTable.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AttendDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ComingTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClosingTime)
                                </td>

                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id=item.StaffAttendanceID }) |*@
                                    @Html.ActionLink("View Details", "Details", new { id = item.StaffAttendanceID }, new { @class = "btn btn-info" })
                                    @*@Html.ActionLink("Delete", "Delete", new { id=item.StaffAttendanceID })*@
                                </td>
                            </tr>
}
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


