                            @Html.DropDownListFor(model => model.ClassID, ViewBag.Classes as SelectList, " ", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">

                            @Html.LabelFor(model => model.GroupeId, "Selectionnez un groupe", htmlAttributes: new { @class = "control-label" })
