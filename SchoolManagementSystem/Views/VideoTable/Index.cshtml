@model IEnumerable<SchoolManagementSystem.VideoTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/AdminTemplate/css/lity.min.css" rel="stylesheet">
<script src="~/Content/AdminTemplate/js/lity.min.js"></script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Ajouter Nouveau", "Create")
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">La liste des videos</h6>
    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered table-sm" cellspacing="0" id="table_format" style="text-align:center;">
            <thead style="text-align:center">
                <tr style="text-align:center">
                    <th>

                        Titre
                    </th>
                    <th>

                        Lien
                    </th>
                    <th>
                        Discription
                    </th>
                    <th>
                        Niveau
                    </th>
                    <th>
                        Matière
                    </th>
                    <th>
                        Créateur
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>


                        @*<iframe id="@item.VideoId" class="collapse" src="@Html.DisplayFor(modelItem => item.link)">
            </iframe>*@
                        <!-- The Modal -->
                        <a href="@item.link">Regarder la video</a>


                    <td>
                        @Html.DisplayFor(modelItem => item.Discription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassTable.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserTable.FullName)
                    </td>
                    
                    <td class="btn-group">
                        @Html.ActionLink("Justifier", "Edit", new { id = item.VideoId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Détails", "Details", new { id = item.VideoId }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Supprimer", "Delete", new { id = item.VideoId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script src="~/Content/AdminTemplate/js/jquery-1.11.3.min.js"></script>
<script src="~/Content/AdminTemplate/vendor/datatables/ddtf.js"></script>
<script>
    jQuery('#table_format').ddTableFilter();
</script>
